<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#418F89">

    <!-- Logo -->
    <LinearLayout
        android:id="@+id/logo_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/login" />

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAKU STORE"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Tulisan 'Masuk' -->
    <TextView
        android:id="@+id/text_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp" />

    <!-- Input Email atau Nomor Ponsel -->
    <EditText
        android:id="@+id/email_phone_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/logo_section"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login"
        android:hint="Email atau Nomor Ponsel"
        android:padding="10dp"
        android:textSize="14sp"
        android:hintTextColor="#888888" />

    <!-- Contoh Placeholder -->
    <TextView
        android:id="@+id/placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contoh: 08123456789"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/email_phone_input"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <!-- Input Password -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/placeholder_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login"
        android:hint="Password"
        android:padding="10dp"
        android:textSize="14sp"
        android:hintTextColor="#888888"
        android:inputType="textPassword" />

    <!-- Link 'Belum punya akun?' -->
    <TextView
        android:id="@+id/text_belum_punya_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun?"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/password_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Link 'Lupa Password?' -->
    <TextView
        android:id="@+id/text_lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password?"
        android:textSize="14sp"
        android:textColor="#0000FF"
        android:layout_below="@id/password_input"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />

    <!-- Tombol Daftar -->
    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text_belum_punya_akun"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="#CCCCCC"
        android:text="Daftar"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>

